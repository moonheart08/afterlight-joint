<tabs:ALUITab xmlns:tabs="clr-namespace:Content.Client._AL.UI.Windows.OptionsMenu.Tabs"
              xmlns="clr-namespace:Content.Client._AL.UI.Widgets"
              xmlns:ui="clr-namespace:Content.Client._AL.UI"
              xmlns:smart="clr-namespace:Content.Client._AL.UI.Widgets.Smart"
              HorizontalExpand="True">
    <VGrowStack>
        <smart:FieldGroup Name="StyleConfigGroup" Type="ui:ALStyleConfig">
            <GrowGrid Columns="2">
                <HGrowStack InnerLayoutRatio="1:2" ExpandInner="True">
                    <smart:FieldInputLabel TargetField="UseDepth"/>
                    <smart:FieldCheckBox TargetField="UseDepth" HorizontalAlignment="Right"/>
                </HGrowStack>
                <HGrowStack InnerLayoutRatio="1:2" ExpandInner="True">
                    <smart:FieldInputLabel TargetField="HighContrastExtrude"/>
                    <smart:FieldCheckBox TargetField="HighContrastExtrude" HorizontalAlignment="Right"/>
                </HGrowStack>
                <HGrowStack InnerLayoutRatio="1:2" ExpandInner="True">
                    <smart:FieldInputLabel TargetField="HighContrastText"/>
                    <smart:FieldCheckBox TargetField="HighContrastText" HorizontalAlignment="Right"/>
                </HGrowStack>
            </GrowGrid>
        </smart:FieldGroup>
        <smart:FieldGroup Name="UICVarsGroup" Type="tabs:UICVarsConfig">
            <GrowGrid Columns="2">
                <HGrowStack ExpandInner="True">
                    <smart:FieldInputLabel TargetField="Scale" VAlign="Center"/>
                    <smart:FieldEnumSelector TargetField="Scale"/>
                </HGrowStack>
                <HGrowStack ExpandInner="True">
                    <smart:FieldInputLabel TargetField="Layout" VAlign="Center"/>
                    <smart:FieldEnumSelector TargetField="Layout"/>
                </HGrowStack>
            </GrowGrid>
        </smart:FieldGroup>
        <VFill/>
        <HBackgroundPanel VerticalAlignment="Bottom" Name="TestPane">
            <InfoBox Header="Demo" MaxWidth="200">
                <RichText Text="This serves to preview the selected UI style. Options marked with an asterisk don't support preview."/>
            </InfoBox>
            <HFill/>
            <Keypad/>
        </HBackgroundPanel>
    </VGrowStack>
</tabs:ALUITab>
