<Control xmlns="https://spacestation14.io">
    <BoxContainer Name="MainContainer"
                  Orientation="Horizontal"
                  SetWidth="160">
        <PanelContainer Name="ColorPanel"
                        VerticalExpand="True"
                        SetWidth="7"
                        Margin="0 -1 0 -1"/>
        <Button Name="MainButton"
                HorizontalExpand="True"
                VerticalExpand="True"
                StyleClasses="ButtonSquare">
            <BoxContainer Orientation="Horizontal" HorizontalExpand="True" StyleClasses="ReagentCardInnerButtonBox">
                <BoxContainer Orientation="Vertical"
                              VerticalExpand="True"
                              HorizontalExpand="True">
                    <Label Name="ReagentNameLabel"
                           StyleClasses="ReagentCardReagentName" />
                    <Label Name="FillLabel"
                           StyleClasses="LabelSubText"
                           Margin="0 -5 0 0" />
                </BoxContainer>
            </BoxContainer>
        </Button>
        <Button Name="EjectButton"
                StyleClasses="OpenLeft"
                VerticalExpand="True"
                SetWidth="20"/>
    </BoxContainer>
</Control>
